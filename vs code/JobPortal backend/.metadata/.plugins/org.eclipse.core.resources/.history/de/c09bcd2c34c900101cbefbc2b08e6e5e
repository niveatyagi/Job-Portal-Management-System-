package com.jobporta.service;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jobporta.dto.ProfileDTO;
import com.jobporta.dto.ProfileSearchRequest;
import com.jobporta.entity.Profile;
import com.jobporta.exception.JobPortalException;
import com.jobporta.repository.ProfileRepository;
import com.jobporta.utility.Utilites;

@Service("profileService")
public class ProfileServiceImpl implements ProfileService {

    @Autowired
    private ProfileRepository profileRepository;

    @Override
    public Long createProfile(String email) throws JobPortalException {
        Profile profile = new Profile();
        profile.setId(Utilites.getNextSequence("profiles"));
        profile.setEmail(email);
        profile.setSkills(new ArrayList<>());
        profile.setExperiences(new ArrayList<>());
        profile.setCertifications(new ArrayList<>());
        profileRepository.save(profile);
        return profile.getId(); // âœ… Important
 }

    @Override
    public ProfileDTO getProfile(Long id) throws JobPortalException {
        return profileRepository.findById(id)
                .orElseThrow(() -> new JobPortalException("PROFILE_NOT_FOUND"))
                .toDTO();
    }

    @Override
    public ProfileDTO updateProfile(ProfileDTO profileDTO) throws JobPortalException {

        profileRepository.findById(profileDTO.getId())
                .orElseThrow(() -> new JobPortalException("PROFILE_NOT_FOUND"));

        Profile savedProfile = profileRepository.save(profileDTO.toEntity());

        return savedProfile.toDTO();
    }


@Override
public List<ProfileDTO> getAllProfiles()  {
    return profileRepository.findAll()
            .stream()
            .map(Profile::toDTO)
            .toList(); // Java 16+
}

@Override
public List<ProfileDTO> searchProfiles(ProfileSearchRequest request) {
    return profileRepository.findAll()
        .stream()
        .filter(profile -> {

            // name filter
            if (request.getName() != null && !request.getName().isEmpty() &&
                (profile.getName() == null ||
                 !profile.getName().toLowerCase().contains(request.getName().toLowerCase()))) {
                return false;
            }

            // location filter
            if (request.getLocation() != null && !request.getLocation().isEmpty() &&
                (profile.getLocation() == null ||
                 !profile.getLocation().equalsIgnoreCase(request.getLocation()))) {
                return false;
            }

            // company filter
            if (request.getCompany() != null && !request.getCompany().isEmpty() &&
                (profile.getCompany() == null ||
                 !profile.getCompany().equalsIgnoreCase(request.getCompany()))) {
                return false;
            }

            // job title filter
            if (request.getJobTitle() != null && !request.getJobTitle().isEmpty() &&
                (profile.getJobTitle() == null ||
                 !profile.getJobTitle().equalsIgnoreCase(request.getJobTitle()))) {
                return false;
            }

            // skills filter
            if (request.getSkills() != null && !request.getSkills().isEmpty()) {
                if (profile.getSkills() == null || !profile.getSkills().containsAll(request.getSkills())) {
                    return false;
                }
            }

            // minExperience
            if (request.getMinExperience() != null &&
                (profile.getTotalExperience() == null ||
                 profile.getTotalExperience() < request.getMinExperience())) {
                return false;
            }

            // maxExperience
            if (request.getMaxExperience() != null &&
                (profile.getTotalExperience() == null ||
                 profile.getTotalExperience() > request.getMaxExperience())) {
                return false;
            }

            // minSalary
            if (request.getMinSalary() != null &&
                (profile.getExpectedSalary() == null ||
                 profile.getExpectedSalary() < request.getMinSalary())) {
                return false;
            }

            // maxSalary
            if (request.getMaxSalary() != null &&
                (profile.getExpectedSalary() == null ||
                 profile.getExpectedSalary() > request.getMaxSalary())) {
                return false;
            }

            return true;
        })
        .map(Profile::toDTO)
        .toList();
}


}

