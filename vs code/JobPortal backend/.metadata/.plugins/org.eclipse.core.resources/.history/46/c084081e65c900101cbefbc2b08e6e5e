package com.jobporta.service;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jobporta.dto.ProfileDTO;
import com.jobporta.dto.ProfileSearchRequest;
import com.jobporta.entity.Profile;
import com.jobporta.exception.JobPortalException;
import com.jobporta.repository.ProfileRepository;
import com.jobporta.utility.Utilites;
import java.util.Arrays;
import java.util.Collections;
import java.util.stream.Collectors;

@Service("profileService")
public class ProfileServiceImpl implements ProfileService {

    @Autowired
    private ProfileRepository profileRepository;

    @Override
    public Long createProfile(String email) throws JobPortalException {
        Profile profile = new Profile();
        profile.setId(Utilites.getNextSequence("profiles"));
        profile.setEmail(email);
        profile.setSkills(new ArrayList<>());
        profile.setExperiences(new ArrayList<>());
        profile.setCertifications(new ArrayList<>());
        profileRepository.save(profile);
        return profile.getId(); // ✅ Important
 }

    @Override
    public ProfileDTO getProfile(Long id) throws JobPortalException {
        return profileRepository.findById(id)
                .orElseThrow(() -> new JobPortalException("PROFILE_NOT_FOUND"))
                .toDTO();
    }

    @Override
    public ProfileDTO updateProfile(ProfileDTO profileDTO) throws JobPortalException {

        profileRepository.findById(profileDTO.getId())
                .orElseThrow(() -> new JobPortalException("PROFILE_NOT_FOUND"));

        Profile savedProfile = profileRepository.save(profileDTO.toEntity());

        return savedProfile.toDTO();
    }


@Override
public List<ProfileDTO> getAllProfiles()  {
    return profileRepository.findAll()
            .stream()
            .map(Profile::toDTO)
            .toList(); // Java 16+
}
@Override
public List<ProfileDTO> searchProfiles(ProfileSearchRequest request) {

    // Convert salary (LPA → Rupees)
    Long minSalary = request.getMinSalary() != null ? request.getMinSalary() * 100000L : null;
    Long maxSalary = request.getMaxSalary() != null ? request.getMaxSalary() * 100000L : null;

    // Normalize lists (multi-value filters)
    List<String> reqLocations = Optional.ofNullable(request.getLocations())
            .orElseGet(() -> Optional.ofNullable(request.getLocation())
                    .filter(s -> !s.isBlank())
                    .map(List::of).orElse(List.of()))
            .stream().map(s -> s.trim().toLowerCase())
            .filter(s -> !s.isEmpty()).toList();

    List<String> reqJobTitles = Optional.ofNullable(request.getJobTitles())
            .orElseGet(() -> Optional.ofNullable(request.getJobTitle())
                    .filter(s -> !s.isBlank())
                    .map(List::of).orElse(List.of()))
            .stream().map(s -> s.trim().toLowerCase())
            .filter(s -> !s.isEmpty()).toList();

    List<String> reqCompanies = Optional.ofNullable(request.getCompanies())
            .orElseGet(() -> Optional.ofNullable(request.getCompany())
                    .filter(s -> !s.isBlank())
                    .map(List::of).orElse(List.of()))
            .stream().map(s -> s.trim().toLowerCase())
            .filter(s -> !s.isEmpty()).toList();

    List<String> reqSkills = Optional.ofNullable(request.getSkills())
            .orElse(List.of())
            .stream().map(s -> s.trim().toLowerCase())
            .filter(s -> !s.isEmpty()).toList();

    String reqName = Optional.ofNullable(request.getName())
            .map(String::trim).orElse("").toLowerCase();


    return profileRepository.findAll()
            .stream()
            .filter(profile -> {

                // NAME – contains
                if (!reqName.isEmpty()) {
                    if (profile.getName() == null ||
                            !profile.getName().toLowerCase().contains(reqName)) return false;
                }

                // LOCATION(s)
                if (!reqLocations.isEmpty()) {
                    if (profile.getLocation() == null) return false;

                    String location = profile.getLocation().toLowerCase();
                    boolean match = reqLocations.stream()
                            .anyMatch(location::contains);

                    if (!match) return false;
                }

                // JOB TITLE(s)
                if (!reqJobTitles.isEmpty()) {
                    if (profile.getJobTitle() == null) return false;

                    String job = profile.getJobTitle().toLowerCase();
                    boolean match = reqJobTitles.stream()
                            .anyMatch(job::contains);

                    if (!match) return false;
                }

                // COMPANY(s)
                if (!reqCompanies.isEmpty()) {
                    if (profile.getCompany() == null) return false;

                    String comp = profile.getCompany().toLowerCase();
                    boolean match = reqCompanies.stream()
                            .anyMatch(comp::contains);

                    if (!match) return false;
                }

                // SKILLS – requires ANY skill match
                if (!reqSkills.isEmpty()) {
                    List<String> profileSkills = Optional.ofNullable(profile.getSkills())
                            .orElse(List.of())
                            .stream().map(String::toLowerCase)
                            .toList();

                    boolean match = reqSkills.stream()
                            .anyMatch(profileSkills::contains);

                    if (!match) return false;
                }

                // SALARY RANGE (uses converted values)
                if (minSalary != null && (profile.getExpectedSalary() == null ||
                        profile.getExpectedSalary() < minSalary)) {
                    return false;
                }

                if (maxSalary != null && (profile.getExpectedSalary() == null ||
                        profile.getExpectedSalary() > maxSalary)) {
                    return false;
                }

                return true;
            })
            .map(Profile::toDTO)
            .toList();
}


}

