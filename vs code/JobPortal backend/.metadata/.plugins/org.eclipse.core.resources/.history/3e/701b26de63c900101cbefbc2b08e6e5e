package com.jobporta.service;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.jobporta.dto.ProfileDTO;
import com.jobporta.dto.ProfileSearchRequest;
import com.jobporta.entity.Profile;
import com.jobporta.exception.JobPortalException;
import com.jobporta.repository.ProfileRepository;
import com.jobporta.utility.Utilites;
import java.util.Arrays;
import java.util.Collections;
import java.util.stream.Collectors;

@Service("profileService")
public class ProfileServiceImpl implements ProfileService {

    @Autowired
    private ProfileRepository profileRepository;

    @Override
    public Long createProfile(String email) throws JobPortalException {
        Profile profile = new Profile();
        profile.setId(Utilites.getNextSequence("profiles"));
        profile.setEmail(email);
        profile.setSkills(new ArrayList<>());
        profile.setExperiences(new ArrayList<>());
        profile.setCertifications(new ArrayList<>());
        profileRepository.save(profile);
        return profile.getId(); // ✅ Important
 }

    @Override
    public ProfileDTO getProfile(Long id) throws JobPortalException {
        return profileRepository.findById(id)
                .orElseThrow(() -> new JobPortalException("PROFILE_NOT_FOUND"))
                .toDTO();
    }

    @Override
    public ProfileDTO updateProfile(ProfileDTO profileDTO) throws JobPortalException {

        profileRepository.findById(profileDTO.getId())
                .orElseThrow(() -> new JobPortalException("PROFILE_NOT_FOUND"));

        Profile savedProfile = profileRepository.save(profileDTO.toEntity());

        return savedProfile.toDTO();
    }


@Override
public List<ProfileDTO> getAllProfiles()  {
    return profileRepository.findAll()
            .stream()
            .map(Profile::toDTO)
            .toList(); // Java 16+
}
@Override
public List<ProfileDTO> searchProfiles(ProfileSearchRequest request) {

    // Convert salary from LPA -> Rupees (same behavior as before)
    Long min = request.getMinSalary() != null ? request.getMinSalary() * 100000L : null;
    Long max = request.getMaxSalary() != null ? request.getMaxSalary() * 100000L : null;

    // Normalize multi-value filters (lowercase trimmed)
    List<String> reqLocations = Optional.ofNullable(request.getLocations())
        .orElseGet(() -> {
            if (request.getLocation() != null && !request.getLocation().isBlank()) {
                return List.of(request.getLocation());
            }
            return Collections.emptyList();
        }).stream().map(String::trim).filter(s -> !s.isEmpty()).map(String::toLowerCase).toList();

    List<String> reqJobTitles = Optional.ofNullable(request.getJobTitles())
        .orElseGet(() -> {
            if (request.getJobTitle() != null && !request.getJobTitle().isBlank()) {
                return List.of(request.getJobTitle());
            }
            return Collections.emptyList();
        }).stream().map(String::trim).filter(s -> !s.isEmpty()).map(String::toLowerCase).toList();

    List<String> reqCompanies = Optional.ofNullable(request.getCompanies())
        .orElseGet(() -> {
            if (request.getCompany() != null && !request.getCompany().isBlank()) {
                return List.of(request.getCompany());
            }
            return Collections.emptyList();
        }).stream().map(String::trim).filter(s -> !s.isEmpty()).map(String::toLowerCase).toList();

    List<String> reqSkills = Optional.ofNullable(request.getSkills())
        .orElse(Collections.emptyList())
        .stream().map(String::trim).filter(s -> !s.isEmpty()).map(String::toLowerCase).toList();

    String reqName = Optional.ofNullable(request.getName()).orElse("").trim().toLowerCase();

    return profileRepository.findAll()
        .stream()
        .filter(profile -> {

            // NAME (contains)
            if (!reqName.isEmpty()) {
                if (profile.getName() == null || 
                    !profile.getName().toLowerCase().contains(reqName)) {
                    return false;
                }
            }

            // LOCATION(s) — if any locations provided, at least one must match
            if (!reqLocations.isEmpty()) {
                if (profile.getLocation() == null) return false;
                String profileLoc = profile.getLocation().toLowerCase();
                boolean anyMatch = reqLocations.stream()
                    .anyMatch(loc -> profileLoc.contains(loc));
                if (!anyMatch) return false;
            }

            // JOB TITLE(s)
            if (!reqJobTitles.isEmpty()) {
                if (profile.getJobTitle() == null) return false;
                String profileJob = profile.getJobTitle().toLowerCase();
                boolean anyMatch = reqJobTitles.stream()
                    .anyMatch(j -> profileJob.contains(j));
                if (!anyMatch) return false;
            } else if (request.getJobTitle() != null && !request.getJobTitle().isBlank()) {
                // fallback single check (already covered above but kept for clarity)
                if (profile.getJobTitle() == null ||
                        !profile.getJobTitle().equalsIgnoreCase(request.getJobTitle())) {
                    return false;
                }
            }

            // COMPANY(s)
            if (!reqCompanies.isEmpty()) {
                if (profile.getCompany() == null) return false;
                String profileComp = profile.getCompany().toLowerCase();
                boolean anyMatch = reqCompanies.stream()
                    .anyMatch(c -> profileComp.contains(c));
                if (!anyMatch) return false;
            }

            // SKILLS (all skills required) — if you want ANY skill instead, change logic
            if (!reqSkills.isEmpty()) {
                if (profile.getSkills() == null) return false;
                List<String> profileSkills = profile.getSkills().stream()
                    .map(String::trim).map(String::toLowerCase).toList();
                // require that profile contains all requested skills:
                if (!profileSkills.containsAll(reqSkills)) return false;
            }

            // SALARY (profile.expectedSalary in rupees)
            Long expected = profile.getExpectedSalary();
            if (expected != null) {
                if (min != null && expected < min) return false;
                if (max != null && expected > max) return false;
            } else {
                // If no expected salary on profile, exclude if user specified min or max
                if (min != null || max != null) return false;
            }

            return true;
        })
        .map(Profile::toDTO)
        .toList();
}


}

